<%= form_for @api, :html => { :class => "form-horizontal api" } do |f| %>

    <% if @api.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@api.errors.count, "error") %> prohibited this api from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @api.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :api_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :api_key, :class => 'form-control' %>
    </div>
    <%= error_span(@api[:api_key]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            apis_path, :class => 'btn btn-default' %>

<% end %>
